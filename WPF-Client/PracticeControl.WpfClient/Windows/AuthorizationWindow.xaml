<Window x:Class="PracticeControl.WpfClient.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeControl.WpfClient.Windows"
        mc:Ignorable="d"
        Title="" Height="365" Width="420" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Style="{StaticResource LoginGridStyle}">
        <StackPanel Style="{StaticResource LoginStackPanelStyle}" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="280">
            <TextBlock Style="{StaticResource LoginTextBlockStyle}" Text="Авторизация" Height="35" HorizontalAlignment="Center" FontSize="20" />

            <TextBlock Style="{StaticResource LoginTextBlockStyle}" Text="Логин" />
            <TextBox Style="{StaticResource LoginTextBoxStyle}" x:Name="login_TextBox" />

            <TextBlock Style="{StaticResource LoginTextBlockStyle}" Text="Пароль"/>
            <PasswordBox Style="{StaticResource LoginPasswordBoxStyle}" x:Name="passwordBox"/> 

            <Button x:Name="auth_button" Style="{StaticResource LoginButtonStyle}" Click="Auth_button_Click" Content="Войти" />
        
        </StackPanel>
    </Grid>
</Window>
