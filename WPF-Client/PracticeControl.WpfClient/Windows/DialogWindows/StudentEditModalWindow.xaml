<Window x:Class="PracticeControl.WpfClient.Windows.DialogWindows.StudentEditModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeControl.WpfClient.Windows.DialogWindows"
        mc:Ignorable="d"
        Title="StudentEditModalWindow" Height="600" Width="405" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"></ColumnDefinition>
            <ColumnDefinition Width="43*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия" Width="100" Height="35" FontSize="18" />
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя" Width="100" Height="35" FontSize="18" />
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество" Width="100" Height="35" FontSize="18" />
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Логин" Width="100" Height="35" FontSize="18" />
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Пароль" Width="100" Height="35" FontSize="18" />


        <TextBox x:Name="lastName_TextBox" Grid.Row="0" Grid.Column="1" Text="" Height="35" Width="190" FontSize="18" />
        <TextBox x:Name="firstName_TextBox" Grid.Row="1" Grid.Column="1" Text="" Height="35" Width="190" FontSize="18" />
        <TextBox x:Name="middleName_TextBox" Grid.Row="2" Grid.Column="1" Text="" Height="35" Width="190" FontSize="18" />
        <TextBox x:Name="login_TextBox" Grid.Row="3" Grid.Column="1" Text="" Height="35" Width="190" FontSize="18" />
        <TextBox x:Name="password_TextBox" Grid.Row="4" Grid.Column="1" Text="" Height="35" Width="190" FontSize="18" />

        <Button x:Name="editStudent_Button" Click="EditStudent_Button_Click" 
                Content="Изменить студента" FontSize="17"  Grid.ColumnSpan="2"
                Grid.Row="5" Height="45" Width="220"/>
    </Grid>
</Window>
