<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeControl.XamarinClient.Pages.MainContentPage"
             Background="#2196F3" NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout x:Name="stackLayoutNotPractice" HorizontalOptions="CenterAndExpand" IsVisible="false">
                <Label x:Name="labelNotPractice"/>
            </StackLayout>

            <StackLayout x:Name="stackLayoutUpdateAttendance" IsVisible="true">
                <Label x:Name="labelPracticeName"/>
                <Label x:Name="labelPracticeDate"/>
                <Label x:Name="labelDateNow"/>

                <Button x:Name="buttonUpdateAttendance"
                        WidthRequest="100"
                        HeightRequest="40"
                        Text="Отмениться на сегодня"
                        Clicked="buttonUpdateAttendance_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>